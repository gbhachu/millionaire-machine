<div id="chart-container" style="width:70%; height:400px; padding-left: 12%; padding-top: 5%;"></div>


<br></br>

<% if @income.any? %>


 <% @income.each do |income| %>
    <%= income.name %>
 <% end %>
 <% else %>No Incomes Added
<% end %><br /><br />

<% if @expenditure.any? %>
 <% @expenditure.each do |expenditure| %>
    <%= expenditure.name %>
 <% end %>
 <% else %>No Expenditures Added
<% end %><br /><br />

<% if @goal.any? %>
   <% @goal.each do |goal| %>
      <%= goal.name %>
     <% end %>
   <% else %>No goals yet
<% end %>


